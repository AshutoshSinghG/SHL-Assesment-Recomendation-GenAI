{
    "api_name": "SHL Assessment Recommendation API",
    "version": "1.0.0",
    "base_url": "http://localhost:8000",
    "endpoints": [
      {
        "method": "GET",
        "path": "/",
        "description": "Root endpoint providing API metadata and available routes.",
        "request": {
          "parameters": [],
          "body": null
        },
        "response": {
          "message": "SHL Assessment Recommendation API",
          "version": "1.0.0",
          "endpoints": {
            "health": "/health",
            "recommend": "/recommend"
          }
        }
      },
      {
        "method": "GET",
        "path": "/health",
        "description": "Checks if the API server is running and healthy.",
        "request": {
          "parameters": [],
          "body": null
        },
        "response": {
          "status": "ok"
        }
      },
      {
        "method": "POST",
        "path": "/recommend",
        "description": "Generates SHL assessment recommendations based on a given job description or query text.",
        "request": {
          "content_type": "application/json",
          "schema": {
            "query": "string (required) — The input text or job description for which recommendations are needed.",
            "top_k": "integer (optional, default=10) — The number of top recommendations to return."
          },
          "example": {
            "query": "Software engineer skilled in Python, data structures, and algorithms",
            "top_k": 5
          }
        },
        "response": {
          "content_type": "application/json",
          "schema": {
            "query": "string — The original input query.",
            "count": "integer — Number of recommendations returned.",
            "recommendations": [
              {
                "assessment_name": "Python Developer Skills Test",
                "assessment_url": "https://www.shl.com/solutions/products/product-catalog/python-developer-skills/",
                "test_type": "Knowledge & Skills",
                "description": "Assesses Python programming skills including core concepts, frameworks, and best practices."
              }
            ]
          },
          "example": {
            "query": "Software engineer skilled in Python, data structures, and algorithms",
            "count": 3,
            "recommendations": [
              {
                "assessment_name": "Python Developer Skills Test",
                "assessment_url": "https://www.shl.com/solutions/products/product-catalog/python-developer-skills/",
                "test_type": "Knowledge & Skills",
                "description": "Assesses Python programming skills including core concepts, frameworks, and best practices."
              },
              {
                "assessment_name": "Problem Solving Assessment",
                "assessment_url": "https://www.shl.com/solutions/products/product-catalog/problem-solving-assessment/",
                "test_type": "Cognitive Ability",
                "description": "Evaluates logical reasoning and analytical problem-solving ability."
              }
            ]
          }
        },
        "error_responses": [
          {
            "status_code": 500,
            "message": "Error generating recommendations: <error details>"
          }
        ]
      }
    ]
  }
  